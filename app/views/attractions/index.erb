<% if current_user.is_admin? %>
  <% @attractions.each do |attraction| %>
    <li><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></li>
  <% end %>
  <br>
  <%= link_to "New Attraction", new_attraction_path %>
<% else %>
  <% @attractions.each do |attraction| %>
    <li>
      <%= attraction.name %> - Tickets: <%= attraction.tickets %> - Min. Height: <%= attraction.min_height %> - <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
      <li>attraction.rides.count</li>
    </li>
  <% end %>
<% end %>
